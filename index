<script>
    /**
     * Blue Archive Exp Table (Cumulative milestones from prompt)
     */
    const MILESTONES = {
        1: 0,
        10: 540,
        20: 2200,
        30: 8690,
        40: 21800,
        50: 47295,
        60: 110695,
        70: 274720,
        80: 613830,
        90: 1249185
    };

    function getExpForLevel(lv) {
        if (lv <= 1) return 0;
        if (lv >= 90) return MILESTONES[90];
        if (MILESTONES[lv] !== undefined) return MILESTONES[lv];

        const keys = Object.keys(MILESTONES).map(Number).sort((a,b) => a-b);
        let lower = 1;
        let upper = 90;

        for (let i = 0; i < keys.length; i++) {
            if (keys[i] <= lv) lower = keys[i];
            if (keys[i] >= lv) {
                upper = keys[i];
                break;
            }
        }

        const lowerExp = MILESTONES[lower];
        const upperExp = MILESTONES[upper];
        const ratio = (lv - lower) / (upper - lower);
        return Math.floor(lowerExp + (upperExp - lowerExp) * ratio);
    }

    function step(type, delta) {
        const input = document.getElementById('qty-' + type);
        let val = parseInt(input.value) || 0;
        val = Math.max(0, val + delta);
        input.value = val;
        calculate();
    }

    function calculate() {
        const curLv = parseInt(document.getElementById('cur-lv').value) || 1;
        const tarLv = parseInt(document.getElementById('tar-lv').value) || 90;

        const ssr = parseInt(document.getElementById('qty-ssr').value) || 0;
        const sr = parseInt(document.getElementById('qty-sr').value) || 0;
        const r = parseInt(document.getElementById('qty-r').value) || 0;
        const n = parseInt(document.getElementById('qty-n').value) || 0;

        localStorage.setItem('ba_reports', JSON.stringify({ssr, sr, r, n, curLv, tarLv}));

        const totalAvailableExp = (ssr * 10000) + (sr * 2000) + (r * 500) + (n * 50);
        
        const expAtCur = getExpForLevel(curLv);
        const expAtTar = getExpForLevel(tarLv);
        const neededPerStudent = Math.max(0, expAtTar - expAtCur);

        let canLevelUp = 0;
        let nextNeeded = 0;

        if (neededPerStudent > 0) {
            canLevelUp = Math.floor(totalAvailableExp / neededPerStudent);
            nextNeeded = neededPerStudent - (totalAvailableExp % neededPerStudent);
        }

        document.getElementById('can-level-up').innerHTML = `${canLevelUp.toLocaleString()}<span class="result-unit">人</span>`;
        document.getElementById('total-exp').innerText = totalAvailableExp.toLocaleString();
        document.getElementById('next-needed').innerText = neededPerStudent > 0 ? nextNeeded.toLocaleString() : "0";
    }

    window.onload = () => {
        const saved = localStorage.getItem('ba_reports');
        if (saved) {
            const data = JSON.parse(saved);
            document.getElementById('qty-ssr').value = data.ssr || 0;
            document.getElementById('qty-sr').value = data.sr || 0;
            document.getElementById('qty-r').value = data.r || 0;
            document.getElementById('qty-n').value = data.n || 0;
            if(data.curLv) document.getElementById('cur-lv').value = data.curLv;
            if(data.tarLv) document.getElementById('tar-lv').value = data.tarLv;
        }
        calculate();
    };

    const inputs = document.querySelectorAll('input');
    inputs.forEach(input => {
        input.addEventListener('input', calculate);
    });
</script>

